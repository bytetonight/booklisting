<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="fragment_recycler_view">
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="list_item_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/list_item_container_top_margin</item>
        <item name="android:padding">@dimen/list_item_container_padding</item>
    </style>

    <style name="list_item_card_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="list_item_main_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/list_item_container_padding</item>
    </style>

    <style name="list_item_header_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_header_height</item>
    </style>

    <style name="list_item_header_image">
        <item name="android:layout_width">@dimen/list_item_header_height</item>
        <item name="android:layout_height">@dimen/list_item_header_height</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="list_item_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/list_item_header_bg</item>
        <item name="android:padding">@dimen/list_item_container_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="list_item_teaser_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">@dimen/list_item_container_padding</item>
    </style>

    <style name="list_item_action_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:paddingLeft">@dimen/list_item_container_padding</item>
        <item name="android:paddingRight">@dimen/list_item_container_padding</item>
        <item name="android:layout_marginTop">@dimen/list_item_container_top_margin</item>

    </style>

    <style name="list_item_action_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/list_item_action_text_margin</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_item_action_text_blue" parent="list_item_action_text">
        <item name="android:textColor">@color/list_item_action_text_color</item>
    </style>

    <style name="search_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/search_btn_top_margin</item>
    </style>

    <style name="search_button">
        <item name="android:layout_width">@dimen/search_button_icon_dimen</item>
        <item name="android:layout_height">@dimen/search_button_icon_dimen</item>
        <item name="android:layout_alignBottom">@id/search_text</item>
        <item name="android:layout_alignParentRight">true</item>

        <item name="android:layout_marginRight">@dimen/search_button_icon_dimen</item>
        <item name="android:layout_marginBottom">@dimen/search_btn_top_margin</item>
    </style>

    <style name="Widget.AppCompat.ProgressBar.blurb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:indeterminate">true</item>
    </style>

    <style name="main_activity_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="details_activity_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="details_activity_dummy_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/constraint_view_padding</item>
        <item name="android:layout_marginLeft">@dimen/constraint_view_padding</item>
        <item name="android:layout_marginBottom">@dimen/constraint_view_padding</item>
        <item name="android:layout_marginTop">@dimen/constraint_view_padding</item>
    </style>

    <style name="one_of_the_things_I_hate_about_styles_is_choosing_a_name_for_nothingness">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="empty_view" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="thank_god_styles_can_be_extracted_and_I_found_out">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="you_have_no_idea_how_much_I_hate_this">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="android.example.com.booklisting.MainActivity"
    style="@style/main_activity_root">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <EditText
            android:id="@+id/search_text"
            android:hint="@string/hint_enter_book_name"
            style="@style/search_text" />

        <ImageView
            android:id="@+id/searchButton"
            android:src="@drawable/ic_search_black_24dp"
            style="@style/search_button" />

    </RelativeLayout>

    <!-- Loading indicator is only shown before the first load -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="@style/Widget.AppCompat.ProgressBar.blurb" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        style="@style/fragment_recycler_view" />

    <TextView
        android:id="@+id/empty"
        style="@android:style/TextAppearance.Large"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/strNoRecordsFound" />



</LinearLayout>
